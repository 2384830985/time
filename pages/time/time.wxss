.mask_layer {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  z-index: 1000;
  overflow: hidden; 
  background: #87CEFF;
  top: 0;
  left: 0;
}  
.mask_layer_time{
  position: absolute;
  margin-left: -110rpx;
  top: 20%;
  left: 50%;
  color: white;
  font-size: 100rpx;
}
.mask_layer_mu{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 50rpx;
  top: 50rpx;
}
.modal_click_leave{
  color: white;
  position: absolute;
  top: 50%;
  left: 50%;
  font-size: 50rpx;
  margin-left: -50rpx;
}
